<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.facci.restaurantvs.MainActivityVS"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Restaurante VS"
        android:id="@+id/tituloTV"
        android:layout_gravity="center_horizontal" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="472dp"
        android:columnCount="23"
        android:rowCount="8" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/imagen1IB"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:src="@drawable/uno"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:onClick="click1"/>

        <ImageButton
            android:layout_width="131dp"
            android:layout_height="78dp"
            android:id="@+id/imagen4IB"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/dos"
            android:scaleType="centerCrop"
            android:layout_marginTop="25dp"
            android:onClick="click2"/>

        <ImageView
            android:layout_width="243dp"
            android:layout_height="67dp"
            android:id="@+id/imaagen3IV"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/tres"
            android:scaleType="centerCrop"
            android:layout_marginTop="25dp"
            android:layout_gravity="right"
            android:onClick="click3"/>

        <ImageButton
            android:layout_width="244dp"
            android:layout_height="69dp"
            android:id="@+id/imagen2IB"
            android:layout_row="3"
            android:layout_column="1"
            android:src="@drawable/cuatro"
            android:scaleType="centerCrop"
            android:layout_marginTop="25dp"
            android:layout_gravity="right"
            android:onClick="click4"/>

        <ImageView
            android:layout_width="133dp"
            android:layout_height="79dp"
            android:id="@+id/imaagen7IV"
            android:layout_row="3"
            android:layout_column="0"
            android:src="@drawable/siete"
            android:scaleType="centerCrop"
            android:layout_marginTop="25dp"
            android:onClick="click7"/>

        <ImageView
            android:layout_width="126dp"
            android:layout_height="75dp"
            android:id="@+id/imaagen5IV"
            android:layout_row="7"
            android:layout_column="0"
            android:src="@drawable/cinco"
            android:scaleType="centerCrop"
            android:layout_marginTop="25dp"
            android:onClick="click5"/>

        <ImageButton
            android:layout_width="176dp"
            android:layout_height="94dp"
            android:id="@+id/imagen6IB"
            android:layout_row="7"
            android:layout_column="1"
            android:src="@drawable/seis"
            android:scaleType="centerCrop"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:onClick="click6"/>

    </GridLayout>
</LinearLayout>
